{
  "manifest_version": 3,
  "name": "Tech-Scraper",
  "version": "1.0.0",
  "description": "This extension allows you to see what technologies were used to build a site",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}